@model Employee;

@{
    ViewBag.Title = "Employee Detail";
}

<div class="container d-flex" style="height: 100vh;">
    <div class="container d-flex align-content-center justify-content-center">
        <div class="card w-50 align-self-center">
            <div class="row row-cols-1">
                <div class="col col-md-4 align-content-center text-center">
                        @if (Model.Gender == GenderEnum.Male)
                        {
                            <img class="card-img w-50 m-3" src="~/img/undraw_male_avatar_g98d.min.svg" alt="">
                        }
                        else
                        {
                            <img class="card-img w-75 m-3" src="~/img/undraw_Female_avatar_efig.png" alt="">
                        }
                    
                </div>
                <div class="col col-md-8">
                    <div class="card-body">
                        <h3 class="card-title">@Model.Name</h3>
                        <p class="card-subtitle text-secondary mb-1">@Model.Id</p>
                        <p class="card-text">@Model.Gender</p>
                        <p class="card-text mb-0">@Model.Email</p>
                        <p class="card-text">@Model.Departement</p>
                    </div>
                    <div class="card-footer d-flex justify-content-center flex-wrap">
                            <a href="#" class="btn btn-primary m-1">Back</a>  
                            <a href="#" class="btn btn-primary m-1">Edit</a>
                            <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
