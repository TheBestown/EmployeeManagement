<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a asp-action="index" asp-controller="employee" class="navbar-brand"><img src="~/img/home-button.png" alt="" style="width: 2.5vh;"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarNavAltMarkup" 
            aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav">
                    <a class="nav-link active" aria-current="page" asp-action="index" asp-controller="employee">Home</a>
                    <a class="nav-link" href="#">Create</a>
                </div>
            </div>
            <div class="container collapse navbar-collapse mx-auto">
                <div id="searchBar" class="mx-auto">
                    <form style="width: 35.5vw;">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon1">
                            <span class="input-group-text" id="basic-addon1"><img src="~/img/search.png" alt="" style="width: 2vh;"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </nav>
    @RenderBody()
    @if(IsSectionDefined("script")) {
        @RenderSection("scripts")
    }
</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.js" ></script>
</html>